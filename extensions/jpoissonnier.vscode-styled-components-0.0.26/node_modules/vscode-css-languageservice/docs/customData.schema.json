{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "vscode-css-customdata",
  "title": "VS Code CSS Custom Data format",
  "description": "Format for loading Custom Data in VS Code's CSS support",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "description": "The custom data version",
      "type": "number"
    },
    "properties": {
      "description": "Custom CSS properties",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "oneOf": [
              { "enum": ["standard"] },
              { "enum": ["experimental"] },
              { "enum": ["nonstandard"] },
              { "enum": ["obsolete"] }
            ]
          },
          "browsers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "atDirectives": {
      "description": "Custom CSS at directives",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "oneOf": [
              { "enum": ["standard"] },
              { "enum": ["experimental"] },
              { "enum": ["nonstandard"] },
              { "enum": ["obsolete"] }
            ]
          },
          "browsers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "pseudoClasses": {
      "description": "Custom CSS pseudo classes",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "oneOf": [
              { "enum": ["standard"] },
              { "enum": ["experimental"] },
              { "enum": ["nonstandard"] },
              { "enum": ["obsolete"] }
            ]
          },
          "browsers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "pseudoElements": {
      "description": "Custom CSS pseudo elements",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "oneOf": [
              { "enum": ["standard"] },
              { "enum": ["experimental"] },
              { "enum": ["nonstandard"] },
              { "enum": ["obsolete"] }
            ]
          },
          "browsers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
