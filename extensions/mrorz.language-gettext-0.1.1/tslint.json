{
    "extends": [
        "tslint-eslint-rules",
        "tslint-microsoft-contrib"
    ],
    "rules": {
        "typedef": false,
        "newline-before-return": false,
        "no-increment-decrement": false,
        "no-relative-imports": false,
        "whitespace": [false, "check-branch"],
        "trailing-comma": [
            true,
            {
              "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
            }
        ],
        "no-implicit-dependencies": [
            true,
            "dev"
        ]
    }
}
